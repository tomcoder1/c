#include<bits/stdc++.h>
#define ll long long
#define ld long double
#define FOR(i,a,b) for(ll i=a;i<=b;i++)
#define FOD(i,a,b) for(ll i=a;i>=b;i--)
#define fast() ios_base::sync_with_stdio(false); cin.tie(0); cout.tie(0);
#define file(x) freopen(x".inp","r",stdin); freopen(x".out","w",stdout);
using namespace std;
ll n,a[100005],m,b[100005],c[100005],d[1005]={0},u=0,kq=0;
int main(){
	file("CHOREFRI");
	cin>>n;
	FOR(i,1,n)
		cin>>a[i];
	cin>>m;
	FOR(i,1,m){
		cin>>b[i]>>c[i];
		u=max(u,b[i]);
		if (d[b[i]]==0)
			d[b[i]]=c[i];
		else
			d[b[i]]=min(c[i],d[b[i]]);
	}
	d[u+1]=100000;
	FOD(i,u,1){
		if (d[i]==0)
			d[i]=d[i+1];
		else 
			d[i]=min(d[i],d[i+1]);
	}
	FOR(i,1,n)
		kq+=d[a[i]];
	cout<<kq;	
	return 0;
}
